extends layout
block css
      link(rel='stylesheet', href='/stylesheets/video.css')
block scripts
  script(type='text/javascript' src="https://cdn.webrtc.ecl.ntt.com/skyway-latest.js")
block content
  h1= title
  div(class="videos-container")
    video(id="js-local-video" autoplay muted)
    video(id="js-remote-video" autoplay muted)
  div(class="controller-container")
    p Your id: 
      span(id="js-local-id") ...
    input(type="text" placeholder="Call peer id..." id="js-remote-id")
    button(id="js-call-trigger") Call
    p Currently in call with 
      span(id="js-connected-id") ...
    button(id="js-close-trigger") End call
  script(type='text/javascript' src="/javascripts/step2.js")
